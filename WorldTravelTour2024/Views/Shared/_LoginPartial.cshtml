@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="Agent" asp-action="BecomeAgent">Become Agent</a>
    </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Traveller" asp-action="BecomeTraveller">Become Traveller</a>
        </li>
        <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="Host" asp-action="BecomeHost">Become Host</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="TransportationProvider" asp-action="BecomeTransportationProvider">Become Transportation Provider</a>
        </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
